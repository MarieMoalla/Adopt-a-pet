<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgPet"
    >


    <ImageView
        android:id="@+id/select_animal_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_image"
        android:scaleType="centerCrop"
        android:src="@drawable/image" />

    <EditText
        android:id="@+id/animal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_animal_img"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_forme"
        android:fontFamily="@font/montserrat"
        android:hint="Animal Name...."

        android:inputType="textMultiLine"
        android:padding="20dp"
        android:textColorHint="@android:color/black"


        />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animal_name"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_forme"
        android:fontFamily="@font/montserrat"
        android:hint="Animal Age...."

        android:inputType="textMultiLine"
        android:padding="20dp"
        android:textColorHint="@android:color/black" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animal_name"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="101dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_forme"
        android:fontFamily="@font/montserrat"
        android:hint="Animal Description...."

        android:inputType="textMultiLine"
        android:padding="20dp"
        android:textColorHint="@android:color/black" />

    <Button
        android:id="@+id/add_new_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="71dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/montserrat"

        android:padding="17dp"
        android:text="Add Animal"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>